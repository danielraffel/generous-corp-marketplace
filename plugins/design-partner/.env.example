# Design Partner - API Configuration
# Copy this file to .env and add your API keys

# ============================================
# Image Generation API Keys
# ============================================

# OpenAI (DALL-E 3)
# Get your key at: https://platform.openai.com/api-keys
# Cost: $0.04/image (standard), $0.08/image (HD)
OPENAI_API_KEY=sk-proj-your-key-here

# Google Gemini Imagen (Optional)
# Get your key at: https://aistudio.google.com/api-keys
# Cost: ~$0.03/image (estimated)
GEMINI_API_KEY=your-gemini-key-here

# ============================================
# Image Generation Preferences
# ============================================

# Default provider: openai | gemini | ask
# "ask" will prompt you to choose each time
DEFAULT_IMAGE_PROVIDER=openai

# Fallback order (comma-separated, no spaces)
# If first provider fails, try next in list
IMAGE_PROVIDER_FALLBACK=openai,gemini

# Default image size
# Options: 1024x1024 | 1792x1024 | 1024x1792
DEFAULT_IMAGE_SIZE=1024x1024

# Default quality (DALL-E 3 only)
# Options: standard | hd
DEFAULT_IMAGE_QUALITY=standard

# ============================================
# Cost Controls
# ============================================

# Daily budget (soft limit - warns but allows)
DAILY_IMAGE_BUDGET_USD=5.00

# Warning threshold - confirm before generating
# if single image costs more than this
WARN_THRESHOLD_USD=0.50

# Hard daily limit (refuses to generate beyond this)
# Leave empty for no hard limit
# MAX_DAILY_SPEND_USD=10.00

# ============================================
# Advanced Options
# ============================================

# Require confirmation for HD quality images
REQUIRE_CONFIRM_HD=true

# Auto-save images to artifacts/images/
AUTO_SAVE_IMAGES=true

# Link images to design session state
LINK_IMAGES_TO_STATE=true
