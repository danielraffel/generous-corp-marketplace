{
  "name": "design-partner",
  "version": "0.1.0",
  "description": "AI-powered design thinking partner that helps explore ideas, generate visuals, and create prototypes through natural conversation",
  "author": {
    "name": "Daniel Raffel",
    "email": "daniel@generouscorp.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danielraffel/generous-corp-marketplace/tree/master/plugins/design-partner"
  },
  "keywords": [
    "design-thinking",
    "ideation",
    "prototyping",
    "visualization",
    "image-generation",
    "dall-e",
    "gemini",
    "product-design"
  ],
  "license": "MIT",
  "commands": [
    "start",
    "visualize",
    "providers",
    "cost",
    "refine",
    "brief",
    "ideas",
    "mode"
  ],
  "agents": [
    "idea-generator",
    "design-critic",
    "synthesis-agent",
    "scope-validator"
  ],
  "skills": [
    "design-fundamentals"
  ],
  "hooks": [
    "session-resume",
    "visual-intent-detection",
    "auto-save-artifacts"
  ],
  "dependencies": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "openai": "For DALL-E 3 image generation",
    "google-cloud": "For Gemini Imagen generation"
  },
  "configuration": {
    "state_file": ".claude/dp.local.md",
    "image_artifacts": "artifacts/images",
    "default_image_provider": "openai",
    "default_daily_budget": 5.00
  }
}
